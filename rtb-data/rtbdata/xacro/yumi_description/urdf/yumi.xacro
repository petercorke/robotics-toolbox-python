      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://yumi_description/meshes/body.stl"/>
        </geometry>
        <material name="Light_Grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://yumi_description/meshes/coarse/body.stl"/>
        </geometry>
        <material name="Light_Grey"/>
      </collision>

    </link>


